{
  "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "sourceType": "module"
  },
  "plugins": [
      "babel",
      "react",
      "jsx"
  ],
  "globals":{
  },
  "rules": {
      "no-console": ["error"],
      "no-alert": "error",
      "no-debugger": "error",
      "no-trailing-spaces": "error",
      "indent": [
          "error",
          1
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "babel/new-cap": 1,
      "babel/object-curly-spacing": 0,
      "babel/no-invalid-this": 0,
      "comma-dangle": ["error", {
          "arrays": "never",
          "objects": "never",
          "imports": "never",
          "exports": "never",
          "functions": "ignore"
      }]
  },
  "settings": {
      "import/parser": "babel-eslint",
      "import/resolve": {
        "moduleDirectory": ["node_modules", "src"]
      }
  }
}
